<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_layout"
    android:layout_marginBottom="20dp"
    android:background="@color/colorBack"
    >

    <ImageView
        android:id="@+id/imageViewList"
        android:layout_width="121dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_name_id"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="@string/def_text"
        android:textColor="#fff"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_author_id"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:text="@string/def_text"
        android:textColor="#eee"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewList"
        app:layout_constraintTop_toBottomOf="@+id/book_name_id"
        />

    <TextView
        android:id="@+id/book_rating_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/rating"
        android:textColor="#ccc"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/book_author_id"
        app:layout_constraintTop_toBottomOf="@+id/book_name_id" />

    <TextView
        android:id="@+id/book_year_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:text="2020"
        android:textSize="16sp"
        android:textColor="#ddd"
        app:layout_constraintStart_toEndOf="@+id/imageViewList"
        app:layout_constraintTop_toBottomOf="@+id/book_author_id"
        />

    <TextView
        android:id="@+id/book_page_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:textColor="#ccc"
        android:text="@string/def_text"
        app:layout_constraintStart_toEndOf="@+id/imageViewList"
        app:layout_constraintTop_toBottomOf="@+id/book_year_id" />


</androidx.constraintlayout.widget.ConstraintLayout>